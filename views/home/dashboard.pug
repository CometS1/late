  script(src='/dashboard.js')

  -const week = ["Stupid Hass essay due 10/12 12-3pm","Circuits hw due 10/22", "Data Structures test studying for 10/25"]
  -const today = ["Stupid Hass essay due 10/12"]
  -var state = {showing:week}
  


  section.section
    .container
      h2.title= new Date().toDateString()

      .content <!--will optionally display different timespans based off of current selection, default to current day-->
        -const currDisplay = state.showing
        each n in currDisplay
          p= n


  //- Need to make both buttons same size-// 
  button(type="button" 
  onclick= 'changeTimeDisplayed('+JSON.stringify(week)+','+JSON.stringify(state)+')') Week
  button(type="button" 
  onclick= 'changeTimeDisplayed('+JSON.stringify(today)+','+JSON.stringify(state)+')') Today



